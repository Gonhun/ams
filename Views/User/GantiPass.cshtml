
@{
    ViewBag.Title = "GantiPass";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card card-primary collapsed-card" id="addAccess">
            <div class="card-header">
                <h3 class="card-title">Ganti Password</h3>

                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-plus"></i> Klik Disini
                    </button>
                </div>
                <!-- /.card-tools -->
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <form>
                    <input type="hidden" id="txtId" />
                    <input type="hidden" id="flagSave" />
                    <div class="row">
                        <div class="col-lg-4 col-sm-12">
                            <div class="form-group">
                                <label>Nik</label>
                                <input type="text" class="form-control" id="txtNik" disabled value="@Session["nik"].ToString()">
                            </div>
                        </div>
                        <div class="col-lg-4 col-sm-12">
                            <div class="form-group">
                                <label>Nama</label>
                                <input type="text" class="form-control" id="txtNama" disabled value="@Session["name"].ToString()">
                            </div>
                        </div>
                        <div class="col-lg-4 col-sm-12">
                            <div class="form-group">
                                <label>Jabatan</label>
                                <input type="text" class="form-control" id="txtJab" disabled value="@Session["jab"].ToString()">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-4 col-sm-12">
                            <div class="form-group">
                                <label>Password Baru</label>
                                <input type="password" class="form-control" id="txtPass">
                            </div>
                        </div>
                    </div>
                    
                </form>
            </div>
            <div class="card-footer">
                <button type="button" class="btn btn-info" id="btnSave">Submit</button>
                <button type="button" class="btn btn-danger float-right" id="btnCancel">Cancel</button>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/page/itsm.tchangepass.js"></script>