
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">B.A Serah Terima</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <table id="tblHandout" class="table table-bordered compact table-striped">
                    <thead>
                        <tr>
                            <th>Action</th>
                            <th>No Dokumen</th>
                            <th>No Pengajuan</th>
                            <th>Tgl Pengajuan</th>
                            <th>Site</th>
                            <th>Dept</th>
                            <th>Nik</th>
                            <th>Nama</th>
                            <th>Jenis Aset</th>
                            <th>Jenis Pengajuan</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>

<div class="modal fade bd-example-modal-lg" id="modalPdf" role="dialog" aria-labelledby="modalPdfLabel" aria-hidden="true">
    <div class="modal-lg modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalTitle">Berita Acara Serah Terima Aset</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <iframe id="iForm" style="width: 100%;" height="720"></iframe>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/page/itsm.thandout.js"></script>